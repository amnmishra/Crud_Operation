@model List<Crud_Operation.Models.VenderMaster>
@{
    ViewData["Title"] = "Index";
}



<button class="btn btn-primary">
    <a style="text-decoration:none;color:floralwhite;" asp-controller="VenderMaster" asp-action="AddVender"> <b>+</b> Add Vender</a>
</button>


<table class="table mt-5">
    <tr>
        <th>Vender ID</th>
        <th>Vender Name</th>
        <th>CompanyName</th>
        <th>Email</th>
        <th>MobileNo</th>
        <th>Address</th>
        <th>Pincode</th>
        <th colspan="2">Action</th>
    </tr>
        @{
            int i = 1;
        }
        @foreach(var vender in Model){
        <tr>            
            <td>@i</td>            
            <td>@vender.VenderName</td>
            <td>@vender.CompanyName</td>
            <td>@vender.Email</td>
            <td>@vender.MobileNo</td>
            <td>@vender.Address</td>
            <td>@vender.Pincode</td>
            <td><a class="btn btn-info" href="VenderMaster/AddVender/@vender.Id">Edit</a></td>
            <td><a class="btn btn-danger" href="VenderMaster/Delete/@vender.Id">Delete</a></td>
        </tr>
        i = i + 1;
    }
</table>




